<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        app:cardCornerRadius="4dp"
        android:layout_marginVertical="5dp"
        app:cardBackgroundColor="#fff"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <!-- chứa các sản phẩm-->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imageViewAnhSP"
                android:src="@drawable/adidas"
                android:adjustViewBounds="true"
                android:layout_width="100dp"
                android:layout_height="100dp"/>
            <LinearLayout
                android:id="@+id/linearLayoutGroupTenGia"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="2dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="100dp">
                <TextView
                android:id="@+id/textViewTenSP"
                android:text="Tên sản phẩm"
                android:textColor="#000"
                android:textSize="14sp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/textViewGiaSP"
                    android:text="Giá sản phẩm"
                    android:textColor="#f47920"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/textViewTinhTrang"
                    android:text="Tình trang: còn hàng"
                    android:textColor="#64d8fe"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/textViewTTMoTa"
                    android:text="Tóm tắt mô tả sản phẩm..."
                    android:layout_marginTop="7dp"
                    android:textColor="@color/colorNDTomTat"
                    android:textSize="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>