<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:weightSum="10"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_weight="4"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imageViewAnhGH"
            android:src="@drawable/logo_vans"
            android:adjustViewBounds="true"
            android:layout_width="match_parent"
            android:layout_height="100dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_weight="6"
        android:layout_width="0dp"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textViewTenSpGH"
            android:text="Tên sản phẩm"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/textViewGioiTinhSizeGH"
                android:text="Size Nam: 39"
                android:textColor="#000"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/textViewMauSacGH"
                android:layout_marginLeft="4dp"
                android:text="- Màu: Hồng"
                android:textColor="#000"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <TextView
            android:id="@+id/textViewGiaSpGH"
            android:text="Giá sản phẩm"
            android:textColor="#f47920"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:gravity="left"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <!-- android:focusable="false"=>bắt sự kiện click Item Button ở ListView-->
                <Button
                    android:id="@+id/buttonTruSlGH"
                    android:focusable="false"
                    android:text="-"
                    android:background="#DBD6D6"
                    android:gravity="center"
                    android:textSize="10sp"
                    android:textColor="#776D6D"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>
                <Button
                    android:id="@+id/buttonSlGH"
                    android:focusable="false"
                    android:text="1"
                    android:textColor="#353232"
                    android:gravity="center"
                    android:textSize="10sp"
                    android:background="#F3F1F1"
                    android:layout_width="30dp"
                    android:layout_height="20dp"/>
                <Button
                    android:id="@+id/buttonCongSlGH"
                    android:focusable="false"
                    android:text="+"
                    android:background="#DBD6D6"
                    android:gravity="center"
                    android:textSize="10sp"
                    android:textColor="#776D6D"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>
            </LinearLayout>
            <LinearLayout
               android:gravity="right"
                android:paddingRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageButton
                    android:id="@+id/imageViewXoaSPGH"
                    android:src="@drawable/ic_delete_forever_black_24dp"
                    android:background="@null"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>