<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/account_bg"
    tools:context=".activity.TaiKhoanKhachHang">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarTaiKhoan"
        android:background="#f47920"
        app:title="Tài khoản"
        app:titleTextColor="#fff"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:layout_marginTop="0dp"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/logo2"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginRight="55dp"
        android:layout_marginLeft="53dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="right"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="15dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
            android:layout_gravity="center"
            android:text="Trang thông tin cá nhân"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_marginBottom="15dp"
            android:orientation="vertical"
            android:background="#fff"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/textViewTenTK"
                android:layout_marginTop="20px"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="Họ tên: "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/textViewEmailTK"
                android:layout_marginTop="20px"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="Email: "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/textViewDienThoaiTK"
                android:layout_marginTop="20px"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="Điện thoại: "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/textViewGioTinhTK"
                android:layout_marginTop="20px"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="Giới Tính: "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/textViewDiaChiTK"
                android:layout_marginTop="20px"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_marginBottom="20dp"
                android:text="Địa Chỉ: "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/buttonTrangChuTK"
            android:background="#f47920"
            android:textColor="#fff"
            android:text="Trang chủ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/buttonCapNhatTK"
            android:layout_marginLeft="15dp"
            android:background="#f47920"
            android:textColor="#fff"
            android:text="Cập nhật"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/buttonDangXuat"
            android:layout_marginLeft="15dp"
            android:background="#f47920"
            android:textColor="#fff"
            android:text="Đăng xuất"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>